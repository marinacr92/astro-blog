---
import { getCollection } from 'astro:content';
import { siteConfig } from '../config/site-config';
import MainLayout from '../layouts/MainLayout.astro';
import '../styles/global.css';
import TypedBlogPost from 'src/components/TypedBlogPost.astro';

const blogPosts = await getCollection('blog');
---

<MainLayout title="Marina's Blog">
	<!-- component -->
	<section class="bg-gray-900">
		<div class="container px-6 py-10 mx-auto">
			<h1
				class="text-3xl font-semibold capitalize text-gray-800 lg:text-4xl dark:text-white"
			>
				{siteConfig.title}
			</h1>

			<a href="/blog/1">Blog paginado</a>

			<div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
				{blogPosts.map((post) => <TypedBlogPost post={post} />)}
			</div>
		</div>
	</section>
</MainLayout>
<style>
	@reference "tailwindcss";
	a {
		@apply text-blue-500 hover:underline;
	}

	.disabled {
		@apply bg-gray-600 hover:bg-gray-600;
	}
</style>
